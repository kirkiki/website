extends ../layout

block content
	each movie, i in movies
		.ui.one.column.grid.centered.movies
			.ui.items.movies
				.item
					.ui.small.image
						img(src='/assets/#{movie.img}')
					.content
						.header=movie.title 
						.meta
							span.year=movie.year 
							span.real=movie.real 
						.description
							p=movie.comment
